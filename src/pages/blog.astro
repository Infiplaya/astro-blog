---
import Layout from "../layouts/Layout.astro";
const pageTitle = "Blog";
const posts = await Astro.glob("./posts/*.mdx");
---

<Layout title={pageTitle}>
  {
    posts.map((post) => (
      <ul>
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      </ul>
    ))
  }
</Layout>
