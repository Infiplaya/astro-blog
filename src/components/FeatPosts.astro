---
const posts = await Astro.glob("../pages/posts/*.mdx");
---

<section class="mt-10">
  <h2 class="text-4xl font-semibold">Featured posts</h2>
  <ul class="grid grid-cols-3 mt-5">
    {
      posts.slice(0, 3).map((post) => (
        <li class="transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 w-56 h-64">
          <a href={post.url}>
            <div
              class={
                post.frontmatter.id === 1
                  ? "bg-gradient-to-r from-green-200 via-green-400 to-purple-700 p-1 rounded-lg w-full h-full"
                  : "bg-gradient-to-r from-pink-300 via-purple-300 to-indigo-400 p-1 rounded-lg h-full w-full"
              }
            >
              <div class="bg-neutral-900 w-full h-full rounded-lg p-1">
                <h3 class="text-lg font-semibold text-gray-200 p-3">
                  {post.frontmatter.description}
                </h3>
              </div>
            </div>
          </a>
        </li>
      ))
    }
  </ul>
</section>
