---
const posts = await Astro.glob("../pages/posts/*.mdx");
---

<section class="mt-10">
  <h2 class="text-2xl font-semibold">Featured posts</h2>
  <ul class="grid grid-cols-2 gap-5 mt-5">
    {
      posts.slice(0, 2).map((post) => (
        <li>
          <div class={post.frontmatter.id === 1 ? 'bg-gradient-to-r from-green-200 via-green-400 to-purple-700 p-1 rounded-lg' : 'bg-gradient-to-r from-pink-300 via-purple-300 to-indigo-400 p-1 rounded-lg'}>
            <div class="bg-neutral-900 w-full h-full rounded-lg p-1">
              <a href={post.url}><h3 class="text-xl font-semibold text-gray-200 text-center">{post.frontmatter.title}</h3></a>
            </div>
          </div>
        </li>
      ))
    }
  </ul>
</section>
