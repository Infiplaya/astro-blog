---
const posts = await Astro.glob("../pages/posts/*.mdx");
const getGradient = (id: number) => {
  if (id === 1) {
    return "bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500";
  } else if (id === 2) {
    return "bg-gradient-to-r from-green-300 via-blue-500 to-purple-600";
  } else {
    return "bg-gradient-to-r from-pink-300 via-purple-300 to-indigo-400";
  }
};
---

<section class="mt-20">
  <h2 class="text-3xl md:text-4xl font-semibold font-opensans">
    Featured posts
  </h2>
  <ul class="md:grid md:grid-cols-3 md:gap-8 mt-5 space-y-10 md:space-y-0">
    {
      posts.slice(0, 3).map((post) => (
        <a href={post.url}>
          <div class="flex flex-col w-full h-full bg-neutral-900 hover:bg-neutral-800 border border-neutral-800 rounded-lg">
            <h3 class="text-lg font-medium text-gray-300 p-3 md:p-5">
              {post.frontmatter.description}
            </h3>
            <p class="mt-auto md:mb-5 mb-3 self-start px-3 md:px-5 text-neutral-400">
              {post.frontmatter.time}
            </p>
          </div>
        </a>
      ))
    }
  </ul>
</section>
