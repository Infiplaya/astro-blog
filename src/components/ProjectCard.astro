---
export interface Props {
  name: string;
  description: string;
  link: string;
}

const { name, description, link } = Astro.props;
---

<a href={link} target="_blank">
  <div
    class="bg-neutral-900 hover:bg-neutral-800 w-full h-full rounded-lg border-neutral-800 border border-solid p-5"
  >
    <h3 class="text-xl font-semibold text-gray-50">{name}</h3>
    <p class="text-gray-400 mt-3">{description}</p>
  </div>
</a>
