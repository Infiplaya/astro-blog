---
import { projects } from "../pages/projects.astro";
import ProjectCard from "./ProjectCard.astro";
---

<section class="mt-10">
  <h2 class="text-3xl md:text-4xl font-semibold">Featured projects</h2>
  <ul class="md:grid md:grid-cols-3 md:gap-5 mt-5 space-y-10 md:space-y-0">
    {
      projects.slice(0, 3).map((project) => (
        <li>
          <ProjectCard
            description={project.description}
            name={project.name}
            link={project.link}
          />
        </li>
      ))
    }
  </ul>
</section>
