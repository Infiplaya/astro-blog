---
const { href, ...props } = Astro.props;
const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, "");
---

<a
  href={href}
  rel="prefetch"
  class={`${
    isActive ? "text-teal-500" : "text-neutral-400"
  } hover:bg-neutral-800 font-semibold px-2 py-1 rounded-lg hover:text-teal-500`}
  {...props}
>
  <slot />
</a>